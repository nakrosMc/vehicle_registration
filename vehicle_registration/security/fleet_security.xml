<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Categoría -->
        <record id="module_category_fleet_custom" model="ir.module.category">
            <field name="name">Gestión de Flota</field>
            <field name="description">Módulo personalizado de gestión de vehículos</field>
            <field name="sequence">100</field>
        </record>

        <!-- Grupos de Seguridad -->
        <record id="group_fleet_user" model="res.groups">
            <field name="name">Usuario de Flota</field>
            <field name="category_id" ref="module_category_fleet_custom"/>
        </record>
        
        <record id="group_fleet_manager" model="res.groups">
            <field name="name">Administrador de Flota</field>
            <field name="category_id" ref="module_category_fleet_custom"/>
            <field name="implied_ids" eval="[(4, ref('group_fleet_user'))]"/>
        </record>
        
        <!-- Reglas de Registro -->
        <!-- Usuario solo ve lo que él creó -->
        <record id="fleet_vehicle_user_rule" model="ir.rule">
            <field name="name">Regla Usuario Vehículos</field>
            <field name="model_id" ref="model_fleet_vehicle"/>
            <field name="domain_force">[('contact_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_user'))]"/>
        </record>
        
        <record id="api_log_user_rule" model="ir.rule">
            <field name="name">Regla Usuario Logs API</field>
            <field name="model_id" ref="model_api_log"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_user'))]"/>
        </record>

        <!-- Administrador ve todo -->
        <record id="fleet_vehicle_manager_rule" model="ir.rule">
            <field name="name">Regla Administrador Vehículos</field>
            <field name="model_id" ref="model_fleet_vehicle"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_manager'))]"/>
        </record>
        
        <record id="api_log_manager_rule" model="ir.rule">
            <field name="name">Regla Administrador Logs API</field>
            <field name="model_id" ref="model_api_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_manager'))]"/>
        </record>
    </data>
</odoo>
