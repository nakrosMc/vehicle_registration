<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree (Lista) de Vehículos -->
    <record id="view_vehicle_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.tree</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" string="Referencia"/>
                <field name="name" string="Placa"/>
                <field name="contact_id" string="Propietario"/>
                <field name="brand" string="Marca"/>
                <field name="model" string="Modelo"/>
                <field name="year" string="Año"/>
                <field name="color" string="Color"/>
                <field name="state" 
                   widget="badge"
                   decoration-success="state == 'active'"
                   decoration-danger="state == 'inactive'"
                   decoration-warning="state == 'maintenance'"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form (Formulario) de Vehículos -->
    <record id="view_vehicle_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_active"
                            type="object"
                            string="Activar"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'active')]}"/>

                    <button name="action_set_inactive"
                            type="object"
                            string="Inactivar"
                            class="btn-secondary"
                            attrs="{'invisible': [('state', '=', 'inactive')]}"/>

                    <button name="action_set_maintenance"
                            type="object"
                            string="Mantenimiento"
                            class="btn-warning"
                            attrs="{'invisible': [('state', '=', 'maintenance')]}"/>

                    <button name="action_send_to_api" 
                            type="object" 
                            string="Enviar a API" 
                            class="btn-primary"
                            attrs="{'invisible': [('contact_id', '=', False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h2 class="o_form_title">
                                <field name="sequence" readonly="1"/>
                            </h2>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="name" string="Placa" required="1"/>
                            <field name="contact_id" string="Propietario" required="1"/>
                            <field name="brand" string="Marca"/>
                            <field name="model" string="Modelo"/>
                        </group>
                        <group>
                            <field name="year" string="Año"/>
                            <field name="color" string="Color"/>
                        </group>
                    </group>
                    
                    <group string="Foto del Vehículo">
                        <field name="photo" widget="image" class="oe_avatar"/>
                    </group>
                    
                    <notebook>
                        <page string="Información Adicional">
                            <field name="notes" nolabel="1" placeholder="Aquí puedes escribir cualquier información adicional sobre el vehículo." class="o_form_text_muted"/>
                        </page>
                        <page string="Otros Vehículos">
                            <field name="other_vehicles_ids">
                                <tree string="Vehículos del mismo propietario">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="brand"/>
                                    <field name="model"/>
                                    <field name="year"/>
                                    <field name="state" widget="badge"
                                        decoration-success="state == 'active'"
                                        decoration-danger="state == 'inactive'"
                                        decoration-warning="state == 'maintenance'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>

    <!-- Vista Search (Búsqueda) de Vehículos -->
    <record id="view_vehicle_search" model="ir.ui.view">
        <field name="name">fleet.vehicle.search</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Placa"/>
                <field name="contact_id" string="Propietario"/>
                <field name="brand" string="Marca"/>
                <field name="model" string="Modelo"/>
                <filter string="Vehículos Activos" name="active" domain="[('is_available', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Propietario" name="group_by_contact" context="{'group_by': 'contact_id'}"/>
                    <filter string="Marca" name="group_by_brand" context="{'group_by': 'brand'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_fleet_vehicle" model="ir.actions.act_window">
        <field name="name">Vehículos</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer vehículo
            </p>
        </field>
    </record>
</odoo>