<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree de API Logs -->
    <record id="api_log_tree" model="ir.ui.view">
        <field name="name">api.log.tree</field>
        <field name="model">api.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="vehicle_count"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de API Logs -->
    <record id="api_log_form" model="ir.ui.view">
        <field name="name">api.log.form</field>
        <field name="model">api.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="vehicle_count"/>
                    </group>
                    <group string="Datos">
                        <field name="vehicle_data"/>
                        <field name="response_text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_api_log" model="ir.actions.act_window">
        <field name="name">Logs API</field>
        <field name="res_model">api.log</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay logs aún
            </p>
        </field>
    </record>
</odoo>
